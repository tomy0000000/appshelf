<h1><%= @list.name %></h1>
<small>
  <strong><%= pluralize(@list.entries.count, "App")%></strong>
</small>

<section>
  <%= link_to "Edit", edit_list_path(@list), role: "button" %>
  <%= link_to "Delete", @list, role: "button", class: "danger", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?', disable_with: "Deleting..." } %>
</section>

<section>
  <ul class="entries">
    <%= render @list.entries %>
  </ul>
</section>

<hr/>

<section>
  <h3>Add an app</h3>
  <%= render partial: 'entries/form', locals: { entry: @list.entries.build } %>
</section>
