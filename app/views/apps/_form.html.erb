<%= form_with(model: app) do |form| %>
  <%= form.label :id, "App ID" %>
  <%= form.text_field :id, value: nil, "aria-invalid": app.errors[:id].any? ? true : nil %>
  <% if app.errors[:id].any? %>
    <% app.errors.full_messages_for(:id).each do |error| %>
      <p class="danger"><small><%= error %></small></p>
    <% end %>
  <% end %>

  <%= form.hidden_field :list_id %>

  <%= form.submit %>
<% end %>
